                        <button class="twcss-w-full twcss-px-5 twcss-py-2 twcss-text-sm twcss-tracking-wider twcss-text-white twcss-uppercase twcss-transition-colors twcss-duration-300 twcss-transform twcss-bg-blue-600 twcss-rounded-lg lg:twcss-w-auto lg:twcss-mx-4 hover:twcss-bg-blue-500 focus:twcss-outline-none focus:twcss-bg-blue-500">
                            Subscribe
                        </button>
                    </div>
                </div>
            </div>

            <div class="twcss-flex twcss-items-center twcss-justify-center twcss-w-full twcss-mt-6 lg:twcss-mt-0 lg:twcss-w-1/2">
                <img class="twcss-w-full twcss-h-full twcss-max-w-md" src="https://merakiui.com/images/components/Email-campaign-bro.svg" alt="email illustration vector art">
            </div>
        </div>
    </div>
</section>


